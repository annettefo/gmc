  <row>
    <panel>
      <title>Indexes</title>
      <table>
        <search base="splunk_idx_02_indexes_dashboard_v1">
          <query>| table cluster_label Splunk_Roles title HotWarm_Volume Cold_Volume datatype app currentDBSizeMB currentDBSizeGB currentDBSizeTB total_bucket_count totalEventCount datamodel_summary_size Retention_Days Retention_Month Retention_Years "Earliest Event" "Latest Event" Time_Diff_Days Time_Diff_Month Time_Diff_Years Days_Diff_From_Retention maxDataSize maxHotBuckets maxWarmDBCount 
| rename currentDBSizeMB AS "Index Size (MB)" currentDBSizeGB AS "Index Size (GB)" currentDBSizeTB AS "Index Size (TB)" app AS App datatype AS "Data Type" datamodel_summary_size AS "Data Model Summary Size" cluster_label AS "Indexer Cluster" Splunk_Roles AS "Splunk Roles" title AS Index Retention_Days AS "Retention IN Days" Retention_Month AS "Retention IN Month" Retention_Years AS "Retention IN Years" maxDataSize AS "Max Size of Hot/Warm/Cold Buckets" HotWarm_Volume AS "Hot/Warm Volume" Cold_Volume AS "Cold Volume" Time_Diff_Days AS "Time Diff IN Days" Time_Diff_Month AS "Time Diff IN Month" Time_Diff_Years AS "Time Diff IN Years" Days_Diff_From_Retention AS "Days Diff From Retention" maxDataSize AS "maxDataSize" maxHotBuckets AS "Max Hot Buckets" maxWarmDBCount AS "Max Warm DB Count" total_bucket_count AS "Average Bucket Count" totalEventCount AS "Average Event Count"</query>
        </search>
        <option name="count">20</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="percentagesRow">false</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">true</option>
        <option name="totalsRow">false</option>
        <option name="wrap">false</option>
