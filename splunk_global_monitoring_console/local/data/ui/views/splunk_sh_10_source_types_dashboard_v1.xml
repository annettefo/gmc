<form theme="dark">
    <label>Splunk - SH - 10 - Source Types - Dashboard - v1</label>
    <search id="splunk_sh_10_source_types_dashboard_v1">
        <query>
| inputlookup splunk_rest_configs_conf_props_sh_csv_lookup 
| fields Splunk_Instance Splunk_Roles title appName author description TIME_PREFIX TIME_FORMAT MAX_TIMESTAMP_LOOKAHEAD DATETIME_CONFIG SHOULD_LINEMERGE LINE_BREAKER TRUNCATE BREAK_ONLY_BEFORE BREAK_ONLY_BEFORE_DATE MUST_BREAK_AFTER KV_MODE INDEXED_EXTRACTIONS EVENT_BREAKER_ENABLE EVENT_BREAKER ANNOTATE_PUNCT LEARN_SOURCETYPE LEARN_MODEL MAX_EVENTS maxDist
| makemv delim="|" Splunk_Roles
| fillnull value="Undefined" Splunk_Instance Splunk_Roles title appName author description TIME_PREFIX TIME_FORMAT MAX_TIMESTAMP_LOOKAHEAD DATETIME_CONFIG SHOULD_LINEMERGE LINE_BREAKER TRUNCATE BREAK_ONLY_BEFORE BREAK_ONLY_BEFORE_DATE MUST_BREAK_AFTER KV_MODE INDEXED_EXTRACTIONS EVENT_BREAKER_ENABLE EVENT_BREAKER ANNOTATE_PUNCT LEARN_SOURCETYPE LEARN_MODEL MAX_EVENTS maxDist 
| search Splunk_Instance="*$Splunk_Instance$*" Splunk_Roles="*$Splunk_Roles$*" appName="$appName$" title="*$title$*" author="$author$"
      </query>
    </search>
    <fieldset submitButton="false" autoRun="true">
        <input type="dropdown" token="Splunk_Roles" searchWhenChanged="true">
            <label>Splunk Roles</label>
            <fieldForLabel>Splunk_Roles</fieldForLabel>
            <fieldForValue>Splunk_Roles</fieldForValue>
            <search base="splunk_sh_10_source_types_dashboard_v1">
                <query>| stats count by Splunk_Roles</query>
            </search>
            <choice value="*">All</choice>
            <default>*</default>
            <initialValue>*</initialValue>
        </input>
        <input type="dropdown" token="Splunk_Instance" searchWhenChanged="true">
            <label>Splunk Instance</label>
            <fieldForLabel>Splunk_Instance</fieldForLabel>
            <fieldForValue>Splunk_Instance</fieldForValue>
            <search base="splunk_sh_10_source_types_dashboard_v1">
                <query>| stats count by Splunk_Instance</query>
            </search>
            <choice value="*">All</choice>
            <default>*</default>
            <initialValue>*</initialValue>
        </input>
        <input type="dropdown" token="appName" searchWhenChanged="true">
            <label>App</label>
            <fieldForLabel>appName</fieldForLabel>
            <fieldForValue>appName</fieldForValue>
            <search base="splunk_sh_10_source_types_dashboard_v1">
                <query>| stats count by appName</query>
            </search>
            <choice value="*">All</choice>
            <default>*</default>
            <initialValue>*</initialValue>
        </input>
        <input type="dropdown" token="title" searchWhenChanged="true">
            <label>Source Type Name</label>
            <fieldForLabel>title</fieldForLabel>
            <fieldForValue>title</fieldForValue>
            <search base="splunk_sh_10_source_types_dashboard_v1">
                <query>| stats count by title</query>
            </search>
            <choice value="*">All</choice>
            <default>*</default>
            <initialValue>*</initialValue>
        </input>
        <input type="dropdown" token="author" searchWhenChanged="true">
            <label>Owner</label>
            <fieldForLabel>author</fieldForLabel>
            <fieldForValue>author</fieldForValue>
            <search base="splunk_sh_10_source_types_dashboard_v1">
                <query>| stats count by author</query>
            </search>
            <choice value="*">All</choice>
            <default>*</default>
            <initialValue>*</initialValue>
        </input>
        <input type="text" token="Splunk_Roles" searchWhenChanged="true">
            <label>Splunk Roles (Contains)</label>
            <default>*</default>
            <initialValue>*</initialValue>
        </input>
        <input type="text" token="Splunk_Instance" searchWhenChanged="true">
            <label>Splunk Instance (Contains)</label>
            <default>*</default>
            <initialValue>*</initialValue>
        </input>
        <input type="text" token="title" searchWhenChanged="true">
            <label>Source Type Name (Contains)</label>
            <default>*</default>
            <initialValue>*</initialValue>
        </input>
    </fieldset>
    <row>
        <panel>
            <title>Total Number of Source Types</title>
            <single>
                <search base="splunk_sh_10_source_types_dashboard_v1">
                    <query>| stats count</query>
                </search>
                <option name="colorMode">block</option>
                <option name="drilldown">none</option>
                <option name="rangeColors">["0x53a051","0x53a051"]</option>
                <option name="rangeValues">[0]</option>
                <option name="refresh.display">progressbar</option>
                <option name="useColors">1</option>
            </single>
        </panel>
        <panel>
            <title>By App</title>
            <chart>
                <search base="splunk_sh_10_source_types_dashboard_v1">
                    <query>| stats count by appName</query>
                </search>
                <option name="charting.chart">pie</option>
                <option name="charting.chart.sliceCollapsingThreshold">0</option>
                <option name="charting.drilldown">none</option>
                <option name="refresh.display">progressbar</option>
            </chart>
        </panel>
    </row>
    <row>
        <panel>
            <title>Source Types</title>
            <table>
                <search base="splunk_sh_10_source_types_dashboard_v1">
                    <query>| table Splunk_Instance appName title description TIME_PREFIX TIME_FORMAT MAX_TIMESTAMP_LOOKAHEAD DATETIME_CONFIG SHOULD_LINEMERGE LINE_BREAKER TRUNCATE BREAK_ONLY_BEFORE BREAK_ONLY_BEFORE_DATE MUST_BREAK_AFTER KV_MODE INDEXED_EXTRACTIONS EVENT_BREAKER_ENABLE EVENT_BREAKER ANNOTATE_PUNCT LEARN_SOURCETYPE LEARN_MODEL MAX_EVENTS maxDist 
| sort 0 Splunk_Instance appName title 
| rename Splunk_Roles AS "Splunk Roles" , appName AS App , sharing AS "App Sharing" , author AS Owner , title AS "Source Type" , description AS Description</query>
                </search>
                <option name="drilldown">none</option>
                <option name="rowNumbers">true</option>
                <option name="wrap">true</option>
                <format type="color" field="Splunk_Instance">
                    <colorPalette type="sharedList"></colorPalette>
                    <scale type="sharedCategory"></scale>
                </format>
                <format type="color" field="Splunk Roles">
                    <colorPalette type="sharedList"></colorPalette>
                    <scale type="sharedCategory"></scale>
                </format>
                <format type="color" field="Macro Name">
                    <colorPalette type="sharedList"></colorPalette>
                    <scale type="sharedCategory"></scale>
                </format>
                <format type="color" field="Source Type">
                    <colorPalette type="sharedList"></colorPalette>
                    <scale type="sharedCategory"></scale>
                </format>
                <format type="color" field="App">
                    <colorPalette type="sharedList"></colorPalette>
                    <scale type="sharedCategory"></scale>
                </format>
                <format type="color" field="Owner">
                    <colorPalette type="sharedList"></colorPalette>
                    <scale type="sharedCategory"></scale>
                </format>
                <format type="color" field="TIME_PREFIX">
                    <colorPalette type="sharedList"></colorPalette>
                    <scale type="sharedCategory"></scale>
                </format>
                <format type="color" field="TIME_FORMAT">
                    <colorPalette type="sharedList"></colorPalette>
                    <scale type="sharedCategory"></scale>
                </format>
                <format type="color" field="Description">
                    <colorPalette type="sharedList"></colorPalette>
                    <scale type="sharedCategory"></scale>
                </format>
                <format type="color" field="MAX_TIMESTAMP_LOOKAHEAD">
                    <colorPalette type="sharedList"></colorPalette>
                    <scale type="sharedCategory"></scale>
                </format>
                <format type="color" field="DATETIME_CONFIG">
                    <colorPalette type="sharedList"></colorPalette>
                    <scale type="sharedCategory"></scale>
                </format>
                <format type="color" field="SHOULD_LINEMERGE">
                    <colorPalette type="sharedList"></colorPalette>
                    <scale type="sharedCategory"></scale>
                </format>
                <format type="color" field="TRUNCATE">
                    <colorPalette type="sharedList"></colorPalette>
                    <scale type="sharedCategory"></scale>
                </format>
                <format type="color" field="LINE_BREAKER">
                    <colorPalette type="sharedList"></colorPalette>
                    <scale type="sharedCategory"></scale>
                </format>
            </table>
        </panel>
    </row>
</form>